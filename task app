tasks = []

def add_task(task):
    tasks.append(task)

def view_task():
    for i, task in enumerate(tasks, start=1):
        print (i, task)

while True:
    print ("1.Add tasks")
    print ("2.View tasks")
    print ("3.Mark tasks as done")
    print ("4.Remove tasks")
    print ("5.Save to file")
    chocie = input ("select 1/2/3/4/5: ")
    
    if chocie == "1":
        task = input("add task: ")
        add_task(task)
    
    elif chocie == "2":
        view_task()


restart  
